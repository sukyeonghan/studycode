package com.kh.practice.rspgame;

import java.util.Scanner;
import java.util.Random;

public class RspGame {
	public static String resultString(int n) {
		String r=" ";
		if(n==1) {
			r="가위";
		} else if(n==2) {
			r="바위";
		} else {
			r="보";
		}
	}
	
	public static void main(String[] args) {
		//가위바위보 게임 만들기
		//주먹 가위 보를 입력받아서 비기면 한 번 더 돌고
		//한 명이 이기면 종료하기
		//게임 결과 출력하기 ---while true break
		Scanner sc = new Scanner(System.in);
		
		System.out.println("=== 가위, 바위, 보 게임! ===");
		int com = (int)((Math.random()*3)+1);
		
		while(true) {
		System.out.println("1.가위 2.바위  3.보(번호를 입력하세요)");
		int user = sc.nextInt();

		String r=" ";
	
		
		if(com==1||user==1) {
			r="가위";
		} else if(com==2||user==2) {
			r="바위";
		} else {
			r="보";
		}
		
		System.out.println("컴퓨터 : "+""+com+r);
		System.out.println("사용자 : "+""+user+r);
		
		
		int game = user-com;
		
			if(game==-2||game==1) {
				System.out.println("사용자가 이겼습니다.");
				break;
			} else if(game==2||game==-1) {
				System.out.println("컴퓨터가 이겼습니다.");
				break;
			} else {
				System.out.println("비겼습니다. 다시 한 번,");
				System.out.println();
			}
			
		} 		
	}
	

}
