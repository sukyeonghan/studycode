package com.kh.practice.chap02.loop;

import java.util.Scanner;

public class LoopPractice {
	
	public void practice1() {
		//한 개의 정수를 입력 받아 1부터 그 숫자까지 모두 출력하기
		//단, 입력한 수는 1보다 크거나 같아야 함
		//만일 1미만의 숫자가 입력됐다면 "1이상의 숫자를 입력해주세요" 출력하기

		Scanner sc = new Scanner(System.in);
		
		System.out.print("1이상의 숫자를 입력하세요 :");
		int su1=sc.nextInt();
		sc.nextLine();
		String str1 = "";
		if(su1>0) {
		for(int i=1; i<=su1; i++) {
			str1+=i;
		} System.out.println(str1);
		} else {
				System.out.println("1이상의 숫자를 입력해주세요.");
				}
		
	}
		
	public void practice2() {
		//한 개의 정수를 입력 받아 1부터 그 숫자까지 모두 출력하기
		//1미만의 숫자가 입력됐다면 "1이상의 숫자를 입력해주세요."가 출력되면서
		//다시 사용자가 값을 입력하도록 하기
			
		Scanner sc = new Scanner(System.in);
		
		int su1=0;
		do {
			System.out.print("1이상의 숫자를 입력하세요 :");
			su1=sc.nextInt();
			
			if(su1>=1) {
				for(int i=1; i<=su1; i++) {
				System.out.print(i+" ");
			} 
			} else if (su1<1) {
				System.out.println("1이상의 숫자를 입력해주세요.");	
			}
		} while(su1<1);
		
	}
	
	
	public void practice3() {
		//한 개의 정수를 입력받아 1부터 그 숫자까지 모든 숫자를 거꾸로 출력하기
		//단 입력한 수는 1보다 크거나 같아야한다
		Scanner sc = new Scanner(System.in);
		
		System.out.print("1이상의 숫자를 입력하세요 :");
		int su1=sc.nextInt();
		sc.nextLine();
		String str1 = "";
		if(su1>0) {
		for(int ii=su1; ii>0; ii--) {
			str1+=ii;
		} System.out.println(str1);
		} else {
				System.out.println("1이상의 숫자를 입력해주세요.");
				}
	}
	
	public void practice4() {
		//한 개의 정수를 입력받아 1부터 그 숫자까지 모든 숫자를 거꾸로 출력하기
		//1미만의 숫자가 입력됐다면 "1이상의 숫자를 입력해주세요"가 출력되면서 
		//사용자가 다시 값을 입력하도록 하기
		Scanner sc = new Scanner(System.in);
		
		int su = 0;
		do {
			System.out.print("1이상의 숫자를 입력하세요 :");
			su=sc.nextInt();
		
		if(su>=1) {
			for(int i=su; i>0; i--) {
			System.out.print(i+" ");
			}
		} else if (su<1) {
		System.out.println("1이상의 숫자를 입력해주세요.");
		} 
		
		}while(su<1);

}
	
	public void practice5() {
		//1부터 사용자에게 입력받은 수까지의 정수들의 합 출력하기
		Scanner sc = new Scanner(System.in);
		
		System.out.print("정수를 하나 입력하세요 :");
		int a = sc.nextInt();
		int a2 = 0;
		int i = 0;
		if (i<=a) {
		for(i=1; i<a; i++) {
			a2+=i;
			System.out.print(i + "+"); 
		}
		if(i==a) { 
			a2+=i;
			System.out.print(i);
		}
		} System.out.print("="+ a2);
	}
		
	
	public void practice6() {
		//두 개의 값을 입력 받아 그 사이의 숫자 출력하기
		//만일 1미만의 숫자가 입력됐다면 "1이상의 숫자를 입력해주세요"출력하기
		
		Scanner sc = new Scanner(System.in);
		
		System.out.print("첫 번째 숫자 : ");
		int a = sc.nextInt();
		System.out.print("두 번째 숫자 : ");
		int b = sc.nextInt();
		
		if(a<1 || b<1) {
			System.out.println("1이상의 숫자를 입력해주세요.");
		} else if(a>b) {
			for(int i=b; i<=a; i++) {
				System.out.print(i+" ");
			}
		} else if(a<b) {
		for(int i=a; i<=b; i++) {
			System.out.print(i+" ");
		}
		
	}
}
	
	public void practice7() {
		//두 개의 값을 입력 받아 그 사이의 숫자 출력하기
		//1미만의 숫자가 입력됐다면 "1이상의 숫자를 입력해주세요."가 출력되면서
		//다시 사용자가 값을 입력하도록 하기
		Scanner sc = new Scanner(System.in);
		
		int a = 0;
		int b = 0;
		do {
			System.out.print("첫 번째 숫자 :");
			a = sc.nextInt();
			System.out.print("두 번째 숫자 :");
			b = sc.nextInt();
			
			if(a<1 || b<1) {
				System.out.println("1이상의 숫자를 입력해주세요.");
			} else if(a>b) {
				for(int i=b; i<=a; i++) {
					System.out.print(i+" ");
				}
			} else if(a<b) {
			for(int i=a; i<=b; i++) {
				System.out.print(i+" ");
				}
			}
		
			} while(a<1||b<1);

}
	
	public void practice8() {
		//사용자로부터 입력 받은 숫자의 단 출력하기
		Scanner sc = new Scanner(System.in); 
		
		System.out.print("숫자 :");
		int a = sc.nextInt();
		System.out.println("====" + a +"단 ====");
		for(int i=1; i<=9; i++) {
			System.out.println(a+" * "+i+" = "+a*i);
				
			} 
		}
	
	public void practice9() {
		//입력받은 숫자의 단부터 9단까지 출력하기
		//단 9를 초과하는 숫자가 들어오면 "9이하의 숫자만 입력해주세요" 출력하기
		
		Scanner sc = new Scanner(System.in); 
		
		System.out.print("숫자 :");
		int a = sc.nextInt();
		
		if(2<=a&&a<=9) {
		for(int i=a; i<=9; i++) {
			System.out.println("====" + i +"단 ====");
			for(int j=1; j<=9; j++) {
				System.out.println(i+" * "+j+" = "+i*j);
				}
			}
		
		} else if (a>9) {
			System.out.println("9이하의 숫자만 입력해주세요.");
		}
	
	}
	
	public void practice10() {
		//입력받은 숫자의 단부터 9단까지 출력하기
		//9를 초과하는 숫자가 들어오면 "9이하의 숫자만 입력해주세요" 출력하면서
		//다시 사용자가 값을 입력하도록 하기
		Scanner sc = new Scanner(System.in); 
		
		int a=0;
		do {
			System.out.print("숫자 :");
			a = sc.nextInt();
			
			if(2<=a&&a<=9) {
				for(int i=a; i<=9; i++) {
					System.out.println("====" + i +"단 ====");
					for(int j=1; j<=9; j++) {
						System.out.println(i+" * "+j+" = "+i*j);
				} 
					}
				
				} else if (a>9) {
					System.out.println("9이하의 숫자만 입력해주세요.");
		} 
		
		}	while(2<=a&&a<=9);
	}
	
	public void practice11() {
		//사용자로부터 시작 숫자와 공차(숫자들 사이의 일정한 차)를 입력 받아
		//일정한 값으로 숫자가 커지거나 작아지는 프로그램 구현하기
		//단, 출력되는 숫자는 총 10개
		Scanner sc = new Scanner(System.in);
		
		System.out.print("시작 숫자 :");
		int a = sc.nextInt();
		System.out.print("공차 :");
		int b = sc.nextInt();
		
		int c=0;
		do {
			System.out.print(a+" ");
			a+=b;
			c++;
		} while(c<10);
			System.out.println(" ");
		}
		
	}
	

	

	

	
	

